<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/tripCV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tripTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="March-May 2016"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/profileRL"
             >

             <ImageView
                 android:id="@+id/profileImage"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:scaleType="centerCrop"
                 android:layout_marginStart="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:src="@drawable/human" />

             <TextView
                 android:id="@+id/profileName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toEndOf="@id/profileImage"
                 android:text="Sergey"
                 android:layout_marginStart="10dp"
                 android:layout_centerVertical="true"
                 android:textColor="@color/black"
                 android:textSize="18sp" />

         </RelativeLayout>-->

        <com.glide.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/tripTime"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            custom:indicator_visibility="visible" />

        <TextView
            android:id="@+id/placeTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/slider"
            android:background="@color/newBackgroundBottomLinesIcon"
            android:paddingStart="10dp"
            android:text="Test Text"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.glide.slider.library.Indicators.PagerIndicator
            android:id="@+id/banner_slider_indicator"
            style="@style/AndroidImageSlider_Indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/slider"
            android:layout_centerHorizontal="true"
            android:background="@color/newBackgroundBottomLinesIcon"
            app:selected_color="@color/newAccent"
            app:unselected_color="@color/white" />

        <RelativeLayout
            android:id="@+id/descriptionRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/slider">


            <TextView
                android:id="@+id/tripName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Trip Name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_photo"
                app:border_color="@color/white"
                app:border_width="3dp" />

            <TextView
                android:id="@+id/placesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripName"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Places: 25"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/placesIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/tripName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@id/placesCount"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/ic_menu_gallery" />


            <ImageView
                android:id="@+id/likesIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/tripName"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/placesCount"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_favorite_black_24dp" />

            <TextView
                android:id="@+id/likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripName"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/likesIcon"
                android:text="Likes: 25"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>




