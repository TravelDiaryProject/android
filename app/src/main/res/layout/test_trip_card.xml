<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/fab_margin"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_gravity="center"
    android:layout_marginTop="8dp">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/human" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sergey"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/profileImage"
            android:layout_alignBottom="@id/profileImage"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tripName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Name"
            android:textColor="@color/black"
            android:layout_below="@id/profileImage"
            android:layout_centerHorizontal="true"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/tripImages"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:layout_below="@id/tripName"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tripDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tripImages"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tripPlacesNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Places: 25"
            android:textColor="@color/black"
            android:layout_below="@id/tripDescription"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tripCountries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country: Ukraine, Spain"
            android:textColor="@color/black"
            android:layout_below="@id/tripPlacesNumber"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tripCities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cities: Kiev, Valencia"
            android:textColor="@color/black"
            android:layout_below="@id/tripCountries"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tripShowOnMap"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_below="@id/tripCities"
            android:layout_centerHorizontal="true"
            android:text="Start navigation"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>