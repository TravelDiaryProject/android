<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        android:src="@drawable/human" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profileImage"
        android:layout_toEndOf="@id/profileImage"
        android:text="Sergey"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.glide.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/profileImage"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tripName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider"
        android:layout_centerHorizontal="true"
        android:text="Trip Name"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tripPlacesNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tripName"
        android:text="Places: 25"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/tripCountries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tripPlacesNumber"
        android:text="Country: Ukraine, Spain"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/tripCities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tripCountries"
        android:text="Cities: Kiev, Valencia"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        />

</RelativeLayout>
