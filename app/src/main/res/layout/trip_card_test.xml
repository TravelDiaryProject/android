<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:id="@+id/card_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/tripImageView1"
            android:layout_width="90dp"
            android:layout_height="70dp"

            android:layout_toStartOf="@id/tripImageView4"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"


            android:background="@color/grey"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/tripImageView4"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@color/greydark"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"

            android:scaleType="centerCrop"



            />

        <ImageView
            android:id="@+id/tripImageView3"
            android:layout_width="90dp"
            android:layout_height="70dp"

            android:layout_marginTop="8dp"

            android:layout_toEndOf="@id/tripImageView4"

            android:background="@color/grey"
            android:layout_marginStart="8dp"

            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:background="@color/greylight"
            >

            <ImageView
                android:id="@+id/tripImageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/grey"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"


                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tripTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:layout_below="@id/tripImageView4"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

