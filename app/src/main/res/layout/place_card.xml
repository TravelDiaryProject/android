<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ProgressBar
            android:id="@+id/card_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/placeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text=""
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/placeRemoveButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:adjustViewBounds="true"/>


            <ImageView
                android:id="@+id/placeImageView"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_below="@id/placeTitleText"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/placeLikeButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@id/placeImageView"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"/>
                <!--app:srcCompat="@drawable/ic_plus_one_red_24dp"-->

            <ImageView
                android:id="@+id/placeAddToFutureButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@id/placeImageView"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"/>
                <!--app:srcCompat="@drawable/ic_add_circle_outline_red_24dp"-->


            <ImageView
                android:id="@+id/placeShowInMapButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@id/placeImageView"
                android:layout_toEndOf="@id/placeLikeButton"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"/>
                <!--app:srcCompat="@drawable/ic_location_on_red_24dp"-->


        </RelativeLayout>

</android.support.v7.widget.CardView>
