<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:id="@+id/card_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/tripImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"

            android:scaleType="centerCrop"

            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/tripImageView1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@id/tripImageView"

            android:layout_toEndOf="@id/tripImageView"

            android:background="@color/black"
            android:rotation="-10"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/tripImageView2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@color/black"

            android:scaleType="centerCrop"

            android:layout_toEndOf="@id/tripImageView"
            android:layout_above="@id/tripImageView"
            android:rotation="20"

            />

        <ImageView
            android:id="@+id/tripImageView3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_above="@id/tripImageView"

            android:layout_toStartOf="@id/tripImageView"

            android:background="@color/black"
            android:rotation="-5"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/tripImageView2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@color/black"

            android:scaleType="centerCrop"

            android:layout_toStartOf="@id/tripImageView"
            android:layout_below="@id/tripImageView"
            android:rotation="20"
            />

        <TextView
            android:id="@+id/tripTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

