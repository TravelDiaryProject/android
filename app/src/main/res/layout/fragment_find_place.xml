<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.traveldiary.android.FindPlaceFragment">

    <TextView
        android:id="@+id/find_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Search by city or country" />

    <!--<android.support.v7.widget.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:queryHint="Search"
        app:iconifiedByDefault="false" />-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_autocomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/find_text_view"

        android:paddingTop="20dp">

        <AutoCompleteTextView
            android:id="@+id/find_autocompletetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="17dp"
            android:hint="deded"
            android:ems="10"
            android:text="">
        </AutoCompleteTextView>


    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/find_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Search" />


</RelativeLayout>
