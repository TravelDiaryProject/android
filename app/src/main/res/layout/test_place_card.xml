<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <ProgressBar
        android:id="@+id/card_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/placeImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/placeTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:background="@color/newBackgroundBottomLinesIcon"
            android:textColor="@color/black" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/newBackgroundBottomLinesIcon"
            >

            <ImageView
                android:id="@+id/placeLikeButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/placeAddToFutureButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/placeShowInMapButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_toEndOf="@id/placeLikeButton"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="30dp"
                android:adjustViewBounds="true"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
