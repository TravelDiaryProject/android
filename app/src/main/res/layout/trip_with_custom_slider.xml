<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tripCV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tripTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="March-May 2016"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tripTime"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_photo"
            app:border_color="@color/white"
            app:border_width="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tripTime" />

        <TextView
            android:id="@+id/profileLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/profileImage"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profileImage"
            android:text="sergey.login"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/profileImage"
            app:layout_constraintStart_toEndOf="@+id/profileImage"
            app:layout_constraintTop_toTopOf="@+id/profileImage" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_introduction"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/profileImage"
            android:layout_marginTop="10dp"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toBottomOf="@+id/tripName"
            tools:listitem="@layout/pager_item_custom_slider" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pager_introduction"
            app:layout_constraintBottom_toBottomOf="@id/pager_introduction"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <TextView
            android:id="@+id/placeLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/pager_introduction"
            android:background="@color/newBackgroundBottomLinesIcon"
            android:paddingStart="10dp"
            android:text="Test Text"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/pager_introduction" />


        <TextView
            android:id="@+id/tripName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Trip Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/placeLocation"
            app:layout_constraintStart_toStartOf="@+id/placeLocation"
            app:layout_constraintTop_toBottomOf="@+id/profileImage" />

        <TextView
            android:id="@+id/placesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tripName"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"

            android:layout_marginTop="8dp"
            android:text="Places: 25"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/placesIcon"
            app:layout_constraintStart_toEndOf="@+id/placesIcon"
            app:layout_constraintTop_toTopOf="@+id/placesIcon" />


        <ImageView
            android:id="@+id/placesIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/tripName"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/likesIcon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pager_introduction"
            app:srcCompat="@android:drawable/ic_menu_gallery" />


        <ImageView
            android:id="@+id/likesIcon"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_below="@id/tripName"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/placesCount"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/placesIcon"
            app:layout_constraintTop_toBottomOf="@+id/pager_introduction"
            app:srcCompat="@drawable/ic_favorite_black_24dp" />

        <TextView
            android:id="@+id/likesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tripName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/likesIcon"
            android:text="Likes: 25"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/likesIcon"
            app:layout_constraintStart_toEndOf="@+id/likesIcon"
            app:layout_constraintTop_toTopOf="@+id/likesIcon" />

    </android.support.constraint.ConstraintLayout>

    <!--</RelativeLayout>-->

</android.support.v7.widget.CardView>
